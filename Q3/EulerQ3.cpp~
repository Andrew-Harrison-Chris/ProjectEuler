#include <iostream>

using namespace std;

int main () {

  long double number = 2103;
  long double largest_factor;

  for (long double factor = 2; factor <=number/factor; ++factor)
    if (number%factor == 0) {
      largest_factor = factor;
      do number/= factor; while (number % factor == 0);
    }
    if (number != 1) largest_factor = number;

    cout << "Largest Prime factor is: " << largest_factor << endl;

  return 0;
}
