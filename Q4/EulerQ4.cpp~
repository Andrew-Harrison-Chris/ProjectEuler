#include <iostream>

using namespace std;

int Reverse(int n);

int main () {

  int i, j, rev = 0;
  
  for (i=999; i>99; --i) {
    for (j=999; j>99; --j) {
      n = i*j;
      if (n = Reverse(n)) {
	cout << "Largest Palindrome: " << n << endl;
	exit(0);
      }
    }
  }

  return 0;
}

int Reverse(int n) {
  n = num;
  do {
    digit = num%10;
    rev = (rev*10) +  digit;
    num =  num/10;
  } while (num!=0);

  return rev;
}
    
